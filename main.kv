<MainScreen>:
    name: 'main'
    FloatLayout:
        size_hint: None, None

	##################
	##### BUTTONS ####
    ##################

        # Quit button
        DPEAButton:
            text: 'X'
            font_size: 23
            size_hint: None, None
            size: root.width * 0.015, root.width * 0.015
            x: root.width * 0.965
            y: root.height * 0.945
            background_color: 0.7, 0.7, 0.7, 1
            on_release: root.quit()

        DPEAButton:
            id: auto
            color: 0.917, 0.796, 0.380, 1
            text: "Start"
            center_x: root.width * 0.5
            y: root.height * 0.55
            background_color: 1, 0, 0, 0
            background_normal: ''
            size_hint: None,None
            size: 300,100
            on_press: root.auto()
            on_release: root.resetColors()

        # Turn on/off gate
        DPEAButton:
            id: gate
            color: 0.180, 0.188, 0.980, 1
            text: "Open Gate"
            center_x: root.width * 0.25
            y: root.height * 0.55
            background_color: 0, 0, 0, 0
            background_normal: ''
            size_hint: None,None
            size: 300,100
            on_press: root.toggleGate()
            on_release: root.resetColors()

        DPEAButton:
            id: ramp
            color: 0.180, 0.188, 0.980, 1
            text: "Ramp DOWN"
            center_x: root.width * 0.375
            y: root.height * 0.35
            background_color: 0, 0, 0, 0
            background_normal: ''
            size_hint: None,None
            size: 300,100
            on_press: root.rampDown()
            on_release: root.resetColors()

        DPEAButton:
            id: staircase
            color: 0.180, 0.188, 0.980, 1
            text: "Staircase On/Off"
            center_x: root.width * 0.75
            y: root.height * 0.55
            background_color: 0, 0, 0, 0
            background_normal: ''
            size_hint: None,None
            size: 300,100
            on_press: root.toggleStaircase()
            on_release: root.resetColors()

        DPEAButton:
            id: initialize
            color: 0.180, 0.188, 0.980, 1
            text: "Ramp UP"
            center_x: root.width * 0.625
            y: root.height * 0.35
            background_color: 0, 0, 0, 0
            background_normal: ''
            size_hint: None,None
            size: 300,100
            on_press: root.rampUp()
            on_release: root.resetColors()

	##################
	##### SLIDERS ####
    ##################

        Slider:
            id: rampSpeed
            orientation: 'horizontal'
            min: 40
            max: 100
            value: 40
            step: .5
            center_x: root.width * 0.6
            y: root.height * 0.15
            size_hint_x: 7
            on_value: root.setRampSpeed(self.value)

        Slider:
            id: staircaseSpeed
            orientation: 'horizontal'
            min: 0
            max: 18000
            value: 18000
            step: 1000
            center_x: root.width * 0.6
            y: root.height * 0.05
            size_hint_x: 7
            on_value: root.setStaircaseSpeed(self.value)


    ##################
	##### LABELS #####
    ##################

        Label:
            id: title
            text: 'Perpetual Motion Machine'
            font_size: 65
            bold: True
            center_x: root.width * 0.5
            halign: 'center'
            y: root.height * 0.75
            color: 0.9, 0.9, 0.9, 1

        Label:
            id: rampSpeedLabel
            text: 'Ramp Speed: ' + str(rampSpeed.value)
            font_size: 40
            center_x: root.width * 0.22
            y: root.height * 0.15
            color: 0.8, 0.8, 0.8, 1

        Label:
            id: staircaseSpeedLabel
            text: 'Staircase Speed: ' + str(staircaseSpeed.value)
            font_size: 40
            center_x: root.width * 0.20
            y: root.height * 0.05
            color: 0.8, 0.8, 0.8, 1

        Label:
            id: armControlLabel
            text: 'Firmware Version: ' + str(root.version)
            font_size: 20
            center_x: root.width * 0.9
            y: root.height * 0.02
            color: 0.8, 0.8, 0.8, 1

        Label:
            id: ball_ready
            font_size: 30
            color: 0.8, 0.8, 0.8, 1
            bold: True
            center_x: root.width * 0.5
            y: root.height * 0.85
            color: 0.9, 0.9, 0.9, 1
